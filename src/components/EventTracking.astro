---
// Client-side event tracking hooks for CTA interactions.
// Sends events to Google Analytics 4 via gtag().
// Elements with data-track-event and data-track-label attributes are automatically wired.
---
<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll<HTMLElement>('[data-track-event]').forEach((el) => {
      el.addEventListener('click', () => {
        const eventName = el.dataset.trackEvent ?? 'click';
        const label = el.dataset.trackLabel ?? '';
        if (typeof gtag === 'function') {
          gtag('event', eventName, { event_label: label });
        }
      });
    });
  });
</script>

---
// Client-side event tracking hooks for CTA interactions.
// CF Web Analytics does NOT support custom events (confirmed by official FAQ:
// https://developers.cloudflare.com/web-analytics/faq/).
// These hooks wire click handlers to elements with data-track-event attributes
// so a future event destination (Zaraz, custom endpoint) can be enabled with
// a one-line change in the handler below.
---
<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll<HTMLElement>('[data-track-event]').forEach((el) => {
      el.addEventListener('click', () => {
        const eventName = el.dataset.trackEvent ?? 'click';
        const label = el.dataset.trackLabel ?? '';
        // CF Web Analytics does not support custom events.
        // Future: replace with zaraz.track(eventName, { label }) if Zaraz is enabled,
        // or send to a custom analytics endpoint.
        void eventName;
        void label;
      });
    });
  });
</script>

---
import BaseLayout from '../layouts/BaseLayout.astro';

const valueProps = [
  {
    title: 'Guests Have a Blast',
    desc: 'Live trivia turns any gathering into an event people actually talk about. Real-time competition, team collaboration, and plenty of laughs.',
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
  },
  {
    title: 'Raise More, Effortlessly',
    desc: 'Turn engagement into donations. Rally Trivia weaves fundraising into the fun so your supporters give generously without it feeling forced.',
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
  },
  {
    title: 'Zero Stress Setup',
    desc: 'No tech headaches, no complicated configs. We handle everything so you can focus on your guests and your mission.',
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>`,
  },
];

const steps = [
  {
    num: '01',
    title: 'Tell Us About Your Event',
    desc: 'Share your vision — the audience, the vibe, the fundraising goal. We tailor the experience to fit.',
  },
  {
    num: '02',
    title: 'We Build Your Game',
    desc: 'Our team crafts custom trivia rounds, handles all the tech, and makes sure everything is ready to go.',
  },
  {
    num: '03',
    title: 'Your Guests Have a Blast',
    desc: 'Live competition, real-time leaderboards, and plenty of laughs. Your event becomes the one everyone remembers.',
  },
];

// Placeholder stats — replace with real data when available
const stats = [
  { value: '500+', label: 'Events Hosted' },
  { value: '$2M+', label: 'Raised for Nonprofits' },
  { value: '10,000+', label: 'Happy Guests' },
  { value: '50+', label: 'Cities Nationwide' },
];
---

<BaseLayout title="Rally Trivia — Live Trivia for Unforgettable Events" description="Rally Trivia powers live trivia experiences for nonprofit fundraisers and corporate events. Engage your guests, raise more money, and create events people actually remember.">

  <!-- Section 1: Hero -->
  <section class="min-h-screen bg-surface-blue flex items-center justify-center px-4 animate-on-scroll">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-7xl font-bold text-heading leading-tight mb-6">
        Make Every Event <span class="text-primary">Unforgettable</span>
      </h1>
      <p class="text-xl md:text-2xl text-body max-w-2xl mx-auto mb-10">
        Live trivia experiences that get your guests laughing, competing, and giving generously — all in one night.
      </p>
      <a
        href="/contact"
        class="inline-block px-8 py-4 text-lg font-bold rounded-brand bg-primary text-white hover:bg-primary/90 transition-colors duration-200"
      >
        Request a Demo
      </a>
    </div>
  </section>

  <!-- Section 2: Value Propositions -->
  <section class="py-24 px-4 bg-white animate-on-scroll">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-heading text-center mb-4">Why Rally Trivia?</h2>
      <p class="text-lg text-body text-center max-w-2xl mx-auto mb-16">
        Because your event deserves more than a slideshow and a silent auction.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {valueProps.map(({ title, desc, icon }) => (
          <div class="text-center md:text-left">
            <div class="text-primary mb-4 flex justify-center md:justify-start" set:html={icon} />
            <h3 class="text-xl font-bold text-heading mb-2">{title}</h3>
            <p class="text-body">{desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section 3: Dual Audience -->
  <section class="py-24 px-4 bg-surface animate-on-scroll">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-heading text-center mb-16">Built for Your Event</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- Card: Nonprofits -->
        <div class="bg-white rounded-brand p-8 shadow-sm border border-border">
          <div class="text-primary mb-4">
            <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
          </div>
          <h3 class="text-2xl font-bold text-heading mb-3">For Nonprofits</h3>
          <p class="text-body mb-4">Turn your next gala or fundraiser into the event of the year.</p>
          <ul class="space-y-2 text-body mb-6">
            <li class="flex gap-2"><span class="text-primary font-bold">&#10003;</span> Raise more with built-in donation moments</li>
            <li class="flex gap-2"><span class="text-primary font-bold">&#10003;</span> Keep guests engaged all night long</li>
            <li class="flex gap-2"><span class="text-primary font-bold">&#10003;</span> Brand every screen with your mission</li>
            <li class="flex gap-2"><span class="text-primary font-bold">&#10003;</span> Works for galas, auctions, and community nights</li>
          </ul>
          <a href="/contact" class="inline-block px-6 py-3 font-bold rounded-brand bg-primary text-white hover:bg-primary/90 transition-colors">
            Get Started
          </a>
        </div>

        <!-- Card: Corporate Events -->
        <div class="bg-primary rounded-brand p-8 shadow-sm text-white">
          <div class="text-white/80 mb-4">
            <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-3">For Corporate Events</h3>
          <p class="text-white/70 mb-4">Team building that people actually want to show up for.</p>
          <ul class="space-y-2 text-white/80 mb-6">
            <li class="flex gap-2"><span class="text-white font-bold">&#10003;</span> Team building that actually works</li>
            <li class="flex gap-2"><span class="text-white font-bold">&#10003;</span> Works in-person, virtual, or hybrid</li>
            <li class="flex gap-2"><span class="text-white font-bold">&#10003;</span> Custom questions about your company</li>
            <li class="flex gap-2"><span class="text-white font-bold">&#10003;</span> Perfect for happy hours, retreats, and offsites</li>
          </ul>
          <a href="/contact" class="inline-block px-6 py-3 font-bold rounded-brand bg-white text-primary hover:bg-white/90 transition-colors">
            Get Started
          </a>
        </div>

      </div>
    </div>
  </section>

  <!-- Section 4: How It Works -->
  <section class="py-24 px-4 bg-white animate-on-scroll">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-heading text-center mb-16">How It Works</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        {steps.map(({ num, title, desc }) => (
          <div class="flex flex-col items-center text-center md:items-start md:text-left">
            <div class="text-6xl font-bold text-accent-gold/20 mb-4 select-none">{num}</div>
            <h3 class="text-xl font-bold text-heading mb-2">{title}</h3>
            <p class="text-body">{desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section 5: Social Proof (placeholder stats — replace with real data when available) -->
  <section class="py-24 px-4 bg-surface-blue animate-on-scroll">
    <div class="max-w-5xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-heading mb-16">Trusted by Event Organizers Everywhere</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-12">
        {stats.map(({ value, label }) => (
          <div>
            <div class="text-5xl font-bold text-primary mb-2">{value}</div>
            <div class="text-body-light text-sm uppercase tracking-wide">{label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section 6: Final CTA -->
  <section class="py-24 px-4 bg-white animate-on-scroll">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-4xl font-bold text-heading mb-4">Ready to Rally?</h2>
      <p class="text-xl text-body mb-10">
        Let's talk about how Rally Trivia can make your next event one for the books.
      </p>
      <a
        href="/contact"
        class="inline-block px-8 py-4 text-lg font-bold rounded-brand bg-primary text-white hover:bg-primary/90 transition-colors duration-200"
      >
        Request a Demo
      </a>
    </div>
  </section>

</BaseLayout>

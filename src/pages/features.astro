---
import BaseLayout from '../layouts/BaseLayout.astro';

const categories = [
  {
    name: 'Live Game Experience',
    features: [
      {
        title: 'Real-Time Team Play',
        desc: 'Participants join instantly using a short event code — no app download required. Teams submit answers from any device with real-time feedback.',
        icon: `<svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>`,
      },
      {
        title: 'Host-Controlled Show Flow',
        desc: 'Manage the entire event from a dedicated console: start/stop rounds, control answer reveals, trigger breaks, and pace the show in real time.',
        icon: `<svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>`,
      },
      {
        title: 'Live Scoreboard Display',
        desc: 'A dedicated stage display shows live leaderboard rankings, team scores, and sponsor branding — designed for projection on large screens.',
        icon: `<svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>`,
